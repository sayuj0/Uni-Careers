@startuml usecase
left to right direction

:Admin:
:Student:

package "Super Duper System" {
    (Register Account) as Register
    
    (Create Major) as CreateMajor
    (View Major Details) as ViewMajor
    (Edit Major) as EditMajor
    (Delete Major) as DeleteMajor
    
    note right of ViewMajor
        Job postings are managed
        within each major
    end note
    
    (Create Job Posting) as CreateJob
    (Edit Job Posting) as EditJob
    (Delete Job Posting) as DeleteJob
    (View Job Postings) as ViewJobs
    (Apply for Job) as ApplyJob
    (View Applications) as ViewApplications
    (View Application Status) as ViewAppStatus
    (Update Application Status) as UpdateAppStatus
    
    (Select Major) as SelectMajor
    (Change Major) as ChangeMajor

}

Admin --> Register
Student --> Register

Admin --> CreateMajor
Admin --> ViewMajor
Admin --> EditMajor
Admin --> DeleteMajor

Admin --> CreateJob
Admin --> EditJob
Admin --> DeleteJob
Admin --> ViewJobs
Admin --> ViewApplications
Admin --> UpdateAppStatus

Student --> SelectMajor
Student --> ChangeMajor
Student --> ViewJobs
Student --> ApplyJob
Student --> ViewApplications
Student --> ViewAppStatus

ViewMajor ..> ViewJobs : <<include>>
CreateJob ..> ViewMajor : <<extend>>
EditJob ..> ViewMajor : <<extend>>
DeleteJob ..> ViewMajor : <<extend>>

@enduml